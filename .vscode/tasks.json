{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/KidsPrize/KidsPrize.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-serverless",
            "command": "dotnet",
            "type": "process",
            "args": [
                "lambda",
                "deploy-serverless",
                "KidsPrize",
                "--s3-bucket",
                "2f6bf3f8-bc62-4fea-bf09-d2dd22d3c86b"
            ],
            "group": "none",
            "options": {
                "cwd": "src/KidsPrize"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}