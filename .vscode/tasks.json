{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-serverless",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "lambda",
                "deploy-serverless",
                "KidsPrize",
                "--s3-bucket",
                "2f6bf3f8-bc62-4fea-bf09-d2dd22d3c86b",
                "--enable-package-optimization",
                "true"
            ],
            "group": "none",
            "options": {
                "cwd": "src/KidsPrize.Http"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-layer",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "lambda",
                "publish-layer",
                "common-core",
                "--layer-type",
                "runtime-package-store",
                "--s3-bucket",
                "2f6bf3f8-bc62-4fea-bf09-d2dd22d3c86b"
            ],
            "group": "none",
            "options": {
                "cwd": "src/KidsPrize.Http"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}