extends layout

block head
  link(rel="stylesheet", href="/css/bootstrap-social/bootstrap-social.css")

block content
  div.container.text-center
    h2 Login
    div.row
      div.col-xs-0.col-sm-3.col-md-4
      div.col-xs-12.col-sm-6.col-md-4
        a.btn.btn-block.btn-social.btn-facebook(href="/auth/facebook")
          i.fa.fa-facebook
          |  Sign in with Facebook
        a.btn.btn-block.btn-social.btn-google(href="/auth/google")
          i.fa.fa-google
          |  Sign in with Google
